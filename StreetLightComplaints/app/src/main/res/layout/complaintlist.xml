<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- Movie Title -->

    <TextView
        android:id="@+id/complaintno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Complaint No"
        android:textColor="#282727"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/complaintID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/complaintno"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/complaintno"
        android:layout_toRightOf="@+id/complaintno"
        android:text="compaint ID"
        android:textColor="#000000"
        android:textIsSelectable="false"
        android:textSize="15dp" />

</RelativeLayout>